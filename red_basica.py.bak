    def insertPrintBlock(self):
        pLayerName = h.readValueFromProject("CUR_PRINT_LAYER")
        if pLayerName:
            lst = QgsMapLayerRegistry.instance().mapLayersByName( pLayerName )
            if lst:
                pLayer = lst[0]

                if pLayer:
                    if not pLayer.isEditable():
                        pLayer.startEditing()

                    selId = self.dockPatchs.GetSelectedId()
                    
                    if selId:
                        iterator = h.GetLayer().getFeatures(QgsFeatureRequest().setFilterFid(selId))
                        vfeature = next(iterator)
                    else:
                        vfeature = h.GetLayer().getFeatures().next()

                    
                    if vfeature:
                        geom = vfeature.geometry()
                        if geom:
                            feature = QgsFeature()

                            _iX = geom.vertexAt( 0 )[0]
                            _iY = geom.vertexAt( 0 )[1]

                            cur_print_scale = h.readValueFromProject("CUR_PRINT_SCALE")

                            splited = cur_print_scale.split(":")
                            
                            scale = int(splited[1])

                            _xM = 0.795 * scale
                            _yM = 0.45 * scale

                            _xF = _iX + _xM
                            _yF = _iY + _yM
                            
                            points = [QgsPoint(_iX,_iY),QgsPoint(_iX,_yF),QgsPoint(_xF,_yF),QgsPoint(_xF,_iY),QgsPoint(_iX,_iY)]
                            #points = [QgsPoint(398800.0,7473300.0),QgsPoint(398800.0,7473350.0),QgsPoint(398850.0,7473350.0),QgsPoint(398850.0,7473300.0),QgsPoint(398800.0,7473300.0)]
                            feature.setGeometry(QgsGeometry.fromPolygon([points]))
                            fields = pLayer.pendingFields()
                            feature.setFields(fields)
                            feature.setAttribute("ID",str(feature.id()))
                            pLayer.addFeatures([feature])

                        

    def enableDisablePrintButtons(self,state):
        
        if state:
            self.dockPatchs.btnPrintCancel.setEnabled(True)
            self.dockPatchs.btnPrintConfirm.setEnabled(False)
            self.dockPatchs.btnAddPrintBlock.setEnabled(True)
        else:
            self.dockPatchs.btnPrintCancel.setEnabled(False)
            self.dockPatchs.btnPrintConfirm.setEnabled(True)
            self.dockPatchs.btnAddPrintBlock.setEnabled(False)

    def savePrintSettings(self):
        proj = QgsProject.instance()
        
        proj.writeEntry("AutGeoAtt","CUR_PAGE_SIZE",self.dockPatchs.cboPageSize.currentText())

        proj.writeEntry("AutGeoAtt","CUR_PRINT_SCALE",self.dockPatchs.cboScale.currentText())

        proj.writeEntry("AutGeoAtt","CUR_PRINT_STATE","True")
        

        self.enableDisablePrintButtons(True)

        p_l_name = self.dockPatchs.cboPageSize.currentText() + "_" + self.dockPatchs.cboScale.currentText()

        splited = self.dockPatchs.cboScale.currentText().split(":")

        qpt_name = self.dockPatchs.cboPageSize.currentText() + "_" + splited[1]

        fields = QgsFields()
        fields.append(QgsField("ID",QVariant.String,'String',10,0))

        retLayer = h.CreateLayer(p_l_name,fields,QGis.WKBPolygon,h.GetLayer().crs(),p_l_name.replace(":","_"))

        qmlFile = os.path.join(os.path.dirname(__file__), 'Ret_impres.qml')
        retLayer.loadNamedStyle(qmlFile)

        QgsMapLayerRegistry.instance().addMapLayer(retLayer)

        qptFile = os.path.join(os.path.dirname(__file__), qpt_name + '.qpt')
        myTemplateFile = file(qptFile, 'rt')
        myTemplateContent = myTemplateFile.read()
        myTemplateFile.close()
        myDocument = QDomDocument()
        myDocument.setContent(myTemplateContent, False)
        newcomp = self.iface.createNewComposer(p_l_name)
        newcomp.composition().loadFromTemplate(myDocument)

        proj.writeEntry("AutGeoAtt","CUR_PRINT_LAYER",p_l_name)

    def cancelPrintSettings(self):
        proj = QgsProject.instance()

        
        cur_print_state = h.parseBoolString(h.readValueFromProject("CUR_PRINT_STATE","False"))       
    
        if cur_print_state:
            cur_page_size = h.readValueFromProject("CUR_PAGE_SIZE")
            cur_print_scale = h.readValueFromProject("CUR_PRINT_SCALE")

            name = cur_page_size + "_" + cur_print_scale

            lst = QgsMapLayerRegistry.instance().mapLayersByName( name )
            if lst:
                retLayer = lst[0]
                if retLayer:
                    QgsMapLayerRegistry.instance().removeMapLayer(retLayer)

                    path_absolute = QgsProject.instance().readPath("./")
                    
                    name_to_save = path_absolute + "/" + name.replace(":","_") + ".shp"

                    driver = ogr.GetDriverByName("ESRI Shapefile")
                    if os.path.exists(name_to_save):
                         driver.DeleteDataSource(name_to_save)
        
        proj.writeEntry("AutGeoAtt","CUR_PAGE_SIZE","")

        proj.writeEntry("AutGeoAtt","CUR_PRINT_SCALE","")

        proj.writeEntry("AutGeoAtt","CUR_PRINT_STATE","False")

        proj.writeEntry("AutGeoAtt","CUR_PRINT_LAYER","")

        self.enableDisablePrintButtons(False)

