                _myLayer.startEditing()
            

            for _h in headers:
                if _h != seg_name_c:
                    _idx = _myLayer.fieldNameIndex( _h )
                    if _idx == -1:
                        self.createDefaultAtt(_myLayer,_h,QVariant.String)

            _myLayer.commitChanges()
            if not _myLayer.isEditable():
                _myLayer.startEditing()
            
            for f in _myLayer.getFeatures():
