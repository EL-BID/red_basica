            h.ShowError("The file must be especified")
        else:

            _myLayer = h.GetLayer()

            if _myLayer:

                lst = QgsMapLayerRegistry.instance().mapLayersByName( h.readValueFromProject('NODE_LAYER') )
                if lst:
                    nodeLayer = lst[0]
                    if nodeLayer:
            
                        _file = open(self.dlgExport.txtFileName.text(),'r')
