            self.dlgExport.progressBar.show()
            QCoreApplication.processEvents()
         
            
            for line in _file:
                values = line.split(";")
                if cur_row == 0: # header
                    for v in values:
                        if v == seg_name_c:
                            keyIndex = cur_idx
                        cur_idx = cur_idx + 1
                        headers.append(v[:10].replace('\n',''))
                else:
                    val_dic = {}
                    cur_idx = 0
                    for v in values:
